@model ProjectSubmission.Models.Submissions

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<h4>For Submitter name please try to use your Connect Wise name (eg. jdevries or cphillips)</h4>
</br>
<h4>Idea info</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="submitter" class="control-label"></label>
                <input asp-for="submitter" class="form-control" />
                <span asp-validation-for="submitter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> Reference Ticket (if none please enter 0 (zero))</label>
                <input asp-for="refTicket" class="form-control" value="0"/>
                <span asp-validation-for="refTicket" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Your Project or Automation Idea!</label>
                <textarea rows="6" cols="50" asp-for="submission" class="form-control"></textarea>
                <span asp-validation-for="submission" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Submission">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
